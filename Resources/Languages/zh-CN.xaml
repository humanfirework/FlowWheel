<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:System;assembly=mscorlib">
    <s:String x:Key="WindowTitle">FlowWheel 设置</s:String>
    <s:String x:Key="AppName">FlowWheel 滚轮助手</s:String>
    
    <!-- Group Headers -->
    <s:String x:Key="GroupGeneral">常规</s:String>
    <s:String x:Key="GroupBehavior">行为设置</s:String>
    <s:String x:Key="GroupSensitivity">灵敏度</s:String>
    <s:String x:Key="GroupShortcuts">快捷键</s:String>
    
    <!-- Settings -->
    <s:String x:Key="LabelLanguage">语言 / Language</s:String>
    <s:String x:Key="CheckEnable">启用自动滚屏</s:String>
    <s:String x:Key="CheckSyncScroll">多屏/分屏 同步滚动</s:String>
    <s:String x:Key="CheckReadingMode">启用阅读模式 (双击中键)</s:String>
    <s:String x:Key="LabelTriggerMode">触发模式</s:String>
    <s:String x:Key="LabelTriggerKey">触发按键</s:String>
    <s:String x:Key="KeyMiddleMouse">鼠标中键</s:String>
    <s:String x:Key="KeyXButton1">鼠标侧键 1 (后退)</s:String>
    <s:String x:Key="KeyXButton2">鼠标侧键 2 (前进)</s:String>
    <s:String x:Key="KeyAlt">Alt 键</s:String>
    <s:String x:Key="KeyControl">Ctrl 键</s:String>
    <s:String x:Key="KeyShift">Shift 键</s:String>
