<Window x:Class="FlowWheel.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource WindowTitle}" Height="500" Width="360"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
        Background="#F5F5F7" FontFamily="Segoe UI">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Icon Paths -->
        <Geometry x:Key="IconPlus">M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z</Geometry>
        <Geometry x:Key="IconFolder">M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z</Geometry>
        <Geometry x:Key="IconDelete">M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z</Geometry>
        <Geometry x:Key="IconClear">M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z</Geometry>
        
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="8">
                                <StackPanel>
                                    <Border Background="#FAFAFA" CornerRadius="8,8,0,0" Padding="10,8" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                        <ContentPresenter ContentSource="Header" TextElement.FontWeight="SemiBold" TextElement.Foreground="#333"/>
                                    </Border>
                                    <ContentPresenter Margin="10"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0062A3"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <Path Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Stretch="Uniform" 
                                  Width="12" Height="12"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DDDDDD"/>
                                <Setter Property="Foreground" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Path Data="M12,2 L12,22 M2,12 L22,12" Stroke="#007ACC" StrokeThickness="3" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="{DynamicResource AppName}" FontSize="20" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="{DynamicResource GroupGeneral}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelLanguage}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="LanguageCombo" SelectionChanged="LanguageCombo_SelectionChanged">
                            <ComboBoxItem Content="English" Tag="en-US" IsSelected="True"/>
                            <ComboBoxItem Content="简体中文" Tag="zh-CN"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="{DynamicResource GroupBehavior}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                             <CheckBox x:Name="EnableCheck" Content="{DynamicResource CheckEnable}" IsChecked="True" Checked="EnableCheck_Changed" Unchecked="EnableCheck_Changed" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="SyncCheck" Content="{DynamicResource CheckSyncScroll}" Margin="0,0,0,10" Checked="SyncCheck_Changed" Unchecked="SyncCheck_Changed"/>
                        <CheckBox x:Name="ReadingModeCheck" Content="{DynamicResource CheckReadingMode}" Margin="0,0,0,10" Checked="ReadingModeCheck_Changed" Unchecked="ReadingModeCheck_Changed"/>

                        <TextBlock Text="{DynamicResource LabelTriggerMode}" FontWeight="SemiBold" Margin="0,5,0,5"/>
                        <RadioButton x:Name="RadioClickToggle" GroupName="Mode" Content="{DynamicResource RadioClickToggle}" Margin="0,0,0,5" Checked="RadioMode_Changed"/>
                        <RadioButton x:Name="RadioHoldDrag" GroupName="Mode" Content="{DynamicResource RadioHoldDrag}" Checked="RadioMode_Changed"/>
                        
                        <!-- Trigger Key Selection -->
                        <TextBlock Text="{DynamicResource LabelTriggerKey}" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <ComboBox x:Name="TriggerKeyCombo" SelectionChanged="TriggerKeyCombo_SelectionChanged">
                            <ComboBoxItem Content="{DynamicResource KeyMiddleMouse}" Tag="MiddleMouse"/>
                            <ComboBoxItem Content="{DynamicResource KeyXButton1}" Tag="XButton1"/>
                            <ComboBoxItem Content="{DynamicResource KeyXButton2}" Tag="XButton2"/>
                            <ComboBoxItem Content="{DynamicResource KeyAlt}" Tag="Alt"/>
                            <ComboBoxItem Content="{DynamicResource KeyControl}" Tag="Ctrl"/>
                            <ComboBoxItem Content="{DynamicResource KeyShift}" Tag="Shift"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- Whitelist/Blacklist Manager -->
                <GroupBox Header="{DynamicResource GroupFiltering}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{DynamicResource LabelFilterMode}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="RadioBlacklist" GroupName="FilterMode" Content="{DynamicResource RadioBlacklist}" Margin="0,0,10,0" Checked="RadioFilterMode_Changed" IsChecked="True"/>
                            <RadioButton x:Name="RadioWhitelist" GroupName="FilterMode" Content="{DynamicResource RadioWhitelist}" Checked="RadioFilterMode_Changed"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="FilterModeHelpText" Text="Processes in this list will be ignored." FontSize="11" Foreground="#666" Margin="0,0,0,5" TextWrapping="Wrap"/>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="BlacklistInput" Margin="0,0,5,0" Padding="5" VerticalContentAlignment="Center" ToolTip="Enter process name (e.g. notepad)"/>
                            <Button Grid.Column="1" Style="{StaticResource IconButton}" Content="{StaticResource IconFolder}" Margin="0,0,5,0" Click="BrowseApp_Click" ToolTip="Browse for executable"/>
                            <Button Grid.Column="2" Style="{StaticResource IconButton}" Content="{StaticResource IconPlus}" Click="AddBlacklist_Click" ToolTip="Add to list"/>
                        </Grid>
                        
                        <ListBox x:Name="BlacklistList" Height="150" BorderBrush="#DDD" BorderThickness="1" AllowDrop="True" Drop="BlacklistList_Drop" Background="#FAFAFA">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="{Binding ProcessName}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#444"/>

                                        <Button Grid.Column="1" Style="{StaticResource IconButton}" 
                                                Content="{StaticResource IconDelete}" 
                                                Width="24" Height="24" Padding="6"
                                                Margin="5,0,0,0" 
                                                Background="Transparent" Foreground="#FF6B6B"
                                                Click="RemoveBlacklist_Click" Tag="{Binding ProcessName}" ToolTip="Remove"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBlock Text="Tip: Drag &amp; drop .exe files here" FontSize="10" Foreground="#999" Margin="0,2,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="{DynamicResource GroupSensitivity}">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="{DynamicResource LabelScrollSpeed}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="SpeedValueText" Text="0.5x" HorizontalAlignment="Right" Foreground="#666"/>
                        </Grid>
                        <Slider x:Name="SpeedSlider" Minimum="0.1" Maximum="3.0" Value="0.5" TickFrequency="0.1" IsSnapToTickEnabled="True" ValueChanged="SpeedSlider_ValueChanged"/>
                        
                        <Grid Margin="0,15,0,0">
                            <TextBlock Text="{DynamicResource LabelDeadzone}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="FrictionValueText" Text="20px" HorizontalAlignment="Right" Foreground="#666"/>
                        </Grid>
                        <Slider x:Name="FrictionSlider" Minimum="5" Maximum="100" Value="20" ValueChanged="FrictionSlider_ValueChanged"/>
                        <TextBlock Text="{DynamicResource DescDeadzone}" FontSize="11" Foreground="#888" Margin="0,2,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="{DynamicResource GroupShortcuts}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LabelToggleShortcut}" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="HotkeyInput" Padding="5" IsReadOnly="True" 
                                     PreviewKeyDown="HotkeyInput_PreviewKeyDown" 
                                     GotFocus="HotkeyInput_GotFocus"
                                     LostFocus="HotkeyInput_LostFocus"
                                     Background="White"
                                     VerticalContentAlignment="Center"
                                     Text="Click to set hotkey..."/>
                            <Button Grid.Column="1" Style="{StaticResource IconButton}" Content="{StaticResource IconClear}" Margin="5,0,0,0" Click="ClearHotkey_Click" ToolTip="Clear Hotkey"/>
                        </Grid>
                        <TextBlock Text="Click box and press keys to record" FontSize="10" Foreground="#999" Margin="0,2,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="{DynamicResource GroupAbout}">
                    <StackPanel>
                        <TextBlock Text="FlowWheel" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBlock x:Name="VersionText" Text="Version 1.0.0" Foreground="#666" Margin="0,0,0,10"/>
                        <Button Content="{DynamicResource BtnCheckUpdate}" Click="CheckUpdate_Click" HorizontalAlignment="Left" Padding="15,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Button Grid.Row="2" Content="{DynamicResource BtnCloseToTray}" Click="CloseButton_Click" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
    </Grid>
</Window>
